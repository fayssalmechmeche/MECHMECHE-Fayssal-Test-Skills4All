{% extends 'base.html.twig' %}

{% block title %}Hello CarController!
{% endblock %}

{% block body %}
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<a class="navbar-brand" href="{{ path('app_car') }}">Skills4All</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarSupportedContent">

			<ul class="navbar-nav mr-auto">
				<li class="nav-item active">
					<a class="nav-link" href="{{ path('app_car') }}">Accueil

					</a>
				</li>
				<li class="nav-item active">
					<a class="nav-link" href="{{ path('app_car_admin') }}">Administration

					</a>
				</li>


			</ul>

			{{ form_start(form) }}
			{{form_widget(form.string)}}
			{{form_widget(form.category)}}
			{{form_widget(form.submit)}}
			{{ form_end(form) }}
		</div>
	</nav>
	<div class="count mt-4">
		Il y a
		{{ cars.getTotalItemCount }}
		voitures
	</div>
	<div class="d-flex justify-content-end">
		<button>
			<a href="{{ path('app_car_create') }}">Ajouter une voiture</a>
		</button>
	</div>
	<table class="table m-4">
		<thead>
			<tr>
				<th scope="col">Nom</th>
				<th scope="col">Nombre de porte</th>
				<th scope="col">Nombre de siège</th>
				<th scope="col">Prix</th>
				<th scope="col">Category</th>
				<th scope="col">Modifier</th>
				<th scope="col">Supprimer</th>


			</tr>
		</thead>
		<tbody>
			{% for car in cars %}
				<tr>
					<th>{{car.name}}
					</th>
					<td>{{car.nbdoors}}</td>
					<td>{{car.nbseats}}</td>
					<td>{{car.cost}}
						€
					</td>
					<td>{{car.category}}

					</td>
					<td>
						<button>
							<a href="{{ path('app_car_update',{id : car.id }) }}">Modifier une voiture</a>
						</button>
					</td>
					<td>
						<button>
							<a href="{{ path('app_car_remove',{id : car.id }) }}">Supprimer une voiture</a>
						</button>
					</td>

				</tr>
			{% endfor %}
		</tbody>
	</tbody>
</table>

<div class="navigation d-flex justify-content-center">
	{{ knp_pagination_render(cars) }}
</div>{% endblock %}
